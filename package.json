{
  "name": "vibe-anywhere",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16.7.0"
  },
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "next build",
    "start": "NODE_ENV=production tsx server.ts",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "docker:build": "docker compose build",
    "docker:build:prod": "docker compose -f docker-compose.yml build",
    "docker:up": "docker compose up -d",
    "docker:up:prod": "docker compose -f docker-compose.yml up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f app",
    "docker:shell": "docker compose exec app sh",
    "setup": "npm run docker:up && npm run db:migrate"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@types/better-sqlite3": "^7.6.13",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-image": "^0.9.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.6.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.38.3",
    "next": "^15.1.3",
    "postgres": "^3.4.5",
    "proxmox-api": "^1.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-resizable-panels": "^4.2.2",
    "simple-git": "^3.27.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ssh2": "^1.17.0",
    "tailwind-merge": "^2.6.0",
    "uuid": "^11.0.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/ssh2": "^1.15.5",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
